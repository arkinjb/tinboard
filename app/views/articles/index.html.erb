<div class="row" id="navBar">
   <div class="two columns" id="oneMinute"><a href="oneMinute.html" class="hrefLink">1 Minute</a></div>
    <div class="two columns" id="twoMinutes"><a href="twoMinutes.html" class="hrefLink">Two Minutes</a></div>
    <div class="two columns" id="tenMinutes"><a href="tenMinutes.html" class="hrefLink">10 Minutes</a></div>
    <div class="two columns" id="mostRead"><a href="mostRead.html" class="hrefLink">Most Read</a></div>
    <div class="two columns" id="leastRead"><a href="leastRead.html" class="hrefLink">Least read</a></div>
</div> <!-- navBar -->


<div class="contentWrapper">
<%# @counter = 1 %>
<%# if @counter == 1 || @counter == 4 %>
    <div class="row contentSection">
        <% @articles.each do |article| %>
            <div class="one-third column">
                <h1 class="storyHeadline leastRead"><%= link_to "#{article.title}", article_path(article), {:class => "hrefLink"} %></h1>
                <p><%= article.publication %></p>
                <p class="storyPreview"><%= truncate(article.fulltext, :length => 500 )%></p>
                <button class="readMore">Read More</button>
            </div>
        <%# @counter = @counter + 1 %>
        <% end %>
    </div> <!-- End contentSection -->
</div> <!-- End contentWrapper -->
