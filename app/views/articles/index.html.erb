<!-- navBar -->
<%= render "nav" %>
<div class="two columns" id="mostRead">
    <%= link_to "Most Read", { :class=>"hrefLink", :remote => true} %>
</div>
</div>


<!-- content below here -->
<div class="contentWrapper">
    <div class="row contentSection">
        <!-- playing with Guardian content below here -->
        <% @responses['response']['results'].each do |response| %>
            <div class="one-half column">
                <h1 class="storyHeadline twoMinutes" >
                    <%= truncate(response['fields']['headline'], :length => 400 )%>
                </h1>
                <p><%= response['fields']['byline']%>, The Guardian</p>
                <p class="storyPreview"><%= truncate(sanitize(response['fields']['body'], :tags=>[]), :length => 400 )%></p>
                <button class="readMore"><%= link_to "Read More", articles_path, {:class => "hrefLink"}%>
                </button>
            </div>
        <% end %>
        <!-- seed data below here -->
        <% @articles.each do |article| %>
            <div class="one-third column">
                <h1 class="storyHeadline <%= article.length_class %>" >
                    <%= link_to truncate(article.title, :length => 35), article_path(article), {:class => "hrefLink"}%>
                </h1>
                <p><%= article.author %>, <%= article.publication %></p>
                <p class="storyPreview"><%= truncate(article.fulltext, :length => 400 )%></p>
                <button class="readMore"><%= link_to "Read More", article_path(article), {:class => "hrefLink"}%>
                </button>
            </div>
        <% end %>
    </div> <!-- End contentSection -->
</div> <!-- End contentWrapper -->
